.search
  [class$="navItem"],[class$="active"]
    transform translateX(150%)
.search-popup
  right 0
  transform translateX(100%)
  &.open
    transform translateX(0%)
.search-header
  &:hover::after
    border-color #2bf
  &::after
    border-right 4px solid #fff

@media ( min-width 1024px )
  .search-header
    input
      right 10px
    &::after
      right 0

@keyframes get-in
  0%
    left 180%
  100%
    left -10px

@keyframes get-out
  0%
    width 180%
    right 80%
  100%
    width calc(100% + 10px)
    right 10px
